<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/layout_alert_announce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:clickable="true"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/imageTitleExam"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/announceexam"/>
        <ImageView
            android:id="@+id/examicon"
            android:layout_below="@id/imageTitleExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anouce_icon_15"/>
        <TextView
            android:id="@+id/examtitle"
            android:paddingTop="6dp"
            android:text="Make a test for English."
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toRightOf="@id/examicon"
            android:layout_below="@id/imageTitleExam"
            android:paddingLeft="10dp"
            android:textColor="#58A4C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_below="@id/examtitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/examclass"
                android:text="Class 9/1"
                android:textSize="14dp"
                android:textColor="#58A4C4"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/examdate"
                android:text="03:08:51 03/04/2017"
                android:textColor="#58A4C4"
                android:textSize="14dp"
                android:layout_toRightOf="@id/examclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/examteacher"
            android:text="Teacher: Nguyễn Hoài Lâm"
            android:textColor="#58A4C4"
            android:textSize="16dp"
            android:layout_below="@id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/examcontent"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/examteacher"
            android:lineSpacingExtra="2dp"
            android:textColor="#58A4C4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>
