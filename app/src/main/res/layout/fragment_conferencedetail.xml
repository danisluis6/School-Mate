<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/layout_alert_announce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/conficon"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/announceconf"/>
        <TextView
            android:id="@+id/conftitle"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/conficon"
            android:textColor="#58A4C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_below="@id/conftitle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:id="@+id/labelx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/confgrade"
                android:text="Grade: 6"
                android:textSize="14dp"
                android:paddingRight="4dp"
                android:textColor="#58A4C4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/confdate"
                android:text="03:08:51 03/04/2017"
                android:textColor="#58A4C4"
                android:textSize="14dp"
                android:layout_toRightOf="@id/confgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/confcontent"
            android:textSize="16dp"
            android:padding="10dp"
            android:lineSpacingExtra="2dp"
            android:textColor="#58A4C4"
            android:layout_marginTop="4dp"
            android:layout_below="@id/labelx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>
