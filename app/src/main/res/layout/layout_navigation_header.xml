<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_header_bg">
    <!--Used for Parent-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/nav_parent"
                    app:civ_border_width="0dp"
                    android:layout_marginLeft="15dp"
                    app:civ_border_color="#FF000000"/>
                <TextView
                    android:id="@+id/txtNameOfParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_image"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"

                    android:text="John Thomson"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/txtEmailofParent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/txtNameOfParent"

                    android:text="jonhthomson@gmail.com"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtClassOfChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="6A2"
                    android:layout_alignParentBottom="true"
                    android:textColor="#5684A3"/>
                <TextView
                    android:id="@+id/txtNameOfChild"
                    android:layout_above="@id/txtClassOfChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Tom Thomson"
                    android:textColor="#5684A3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/child_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="56dp"
                    android:layout_above="@id/txtNameOfChild"
                    android:src="@drawable/child_image"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>